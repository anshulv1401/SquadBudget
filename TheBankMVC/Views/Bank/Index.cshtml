@model IEnumerable<TheBankMVC.Models.Bank>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BankName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankInstallmentAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultLoanInterest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultNoOfInstallment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankInstallmentDelayFine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankInstallmentDelayFineType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankInstallmentDelayFinePeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanDelayFine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanDelayFineType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanDelayFinePeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterestTermID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFormat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BankName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankInstallmentAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultLoanInterest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultNoOfInstallment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankInstallmentDelayFine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankInstallmentDelayFineType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankInstallmentDelayFinePeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanDelayFine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanDelayFineType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanDelayFinePeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterestTermID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFormat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BankId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BankId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BankId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
