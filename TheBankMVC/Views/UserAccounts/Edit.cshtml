@model BudgetManager.ViewModels.UserAccountViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">GroupName</label>
                <input readonly class="control-label" value="@Model.Groups.Where(b => b.GroupId == Model.GroupId).First().GroupName"/>
            </div>
            <input type="hidden" asp-for="UserAccountId" />
            <div class="form-group">
                <label asp-for="UserAccountName" class="control-label"></label>
                <input readonly asp-for="UserAccountName" class="form-control" />
                <span asp-validation-for="UserAccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShareSubmitted" class="control-label"></label>
                <input readonly asp-for="ShareSubmitted" class="form-control" />
                <span asp-validation-for="ShareSubmitted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FineSubmitted" class="control-label"></label>
                <input readonly asp-for="FineSubmitted" class="form-control" />
                <span asp-validation-for="FineSubmitted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterestSubmitted" class="control-label"></label>
                <input readonly asp-for="InterestSubmitted" class="form-control" />
                <span asp-validation-for="InterestSubmitted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOnLoan" class="control-label"></label>
                <input readonly asp-for="AmountOnLoan" class="form-control" />
                <span asp-validation-for="AmountOnLoan" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.GroupId)
                @Html.HiddenFor(m => m.UserAccountId)
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
