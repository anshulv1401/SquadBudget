@model TheBankMVC.ViewModels.TransactionsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>UserAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Banks" class="control-label"></label>
                @Html.DropDownListFor(m => m.BankId, new SelectList(Model.Banks, "BankId", "BankName"), "-Select-", new { @class = "form-control" })
                <span asp-validation-for="Banks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccountName" class="control-label"></label>
                <input asp-for="UserAccountName" class="form-control" />
                <span asp-validation-for="UserAccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Hidden("UserAccountId", (Model != null) ? Model.UserAccountId : 0)
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
